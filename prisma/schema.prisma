generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model commentsInner {
  id           Int          @id @default(autoincrement())
  createdAt    DateTime     @default(now())
  content      String?
  like         Int          @default(0)
  authorId     Int
  commentsId   Int
  commentUsers commentUsers @relation(fields: [authorId], references: [id])
  comments     comments     @relation(fields: [commentsId], references: [id])

  @@index([authorId], name: "authorId")
  @@index([commentsId], name: "commentsId")
}

model commentUsers {
  id         Int          @id @default(autoincrement())
  name       String       @unique
  password   String
  comments   comments[]
  commentsInner commentsInner[]
}

model comments {
  id           Int          @id @default(autoincrement())
  createdAt    DateTime     @default(now())
  content      String?
  like         Int          @default(0)
  authorId     Int
  postId       String       @db.VarChar(24)
  commentUsers commentUsers @relation(fields: [authorId], references: [id])
  posts        posts        @relation(fields: [postId], references: [id])
  commentsInner   commentsInner[]

  @@index([authorId], name: "authorId")
  @@index([postId], name: "postId")
}

model posts {
  id                     String          @id @db.VarChar(24)
  name     String     @unique
  comments comments[]
}
